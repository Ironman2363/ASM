<h3>{{titleView}}</h3>
     
    <form action="/admin/inserUsers/{{u._id}}?_method=PUT" method="POST">  
      <div class="form-group" >
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" placeholder="Enter email" 
        name="email" value="{{u.email}}">
      </div>
      <div class="form-group">
        <label for="password">Mật khẩu:</label>
        <input type="password" class="form-control" id="password" placeholder="Enter password" name="password"
        value="{{u.password}}">
      </div>
      <div class="form-group">
        <label for="name">Họ và tên:</label>
        <input type="text" class="form-control" id="name" placeholder="Enter name" name="name"
        value="{{u.name}}">
      </div>
      <div class="form-group">
        <p for="image">Hình ảnh:</p>
        <img style="width: 50px; height: 50px; border-radius: 50%; margin-bottom: 10px;"  src="{{u.image}}"/>
        <input type="text" class="form-control-file" id="image" name="image" value="{{u.image}}">
      </div>

             <div class="form-row">
        <div class="form-group col-md-2.5">
      <button type="submit" class="btn btn-primary" onclick="return confirm('Bạn có muốn sửa thông tin này không?');">Save</button>

        </div>
        <div class="form-group col-md-2.5">


      <h3><a href="/admin/user" class="btn btn-danger" >Huỷ</a></h3>

        </div>
       </div>
    </form>