{{{titleView}}}
<div class="container">
 <a href="/admin/home" class="btn btn-danger" style="margin-top: 20px;width: 150px;">Back</a>

    <div class=" text-left float-left" style="margin-top: 20px; ">
        <a href="/admin/addUsers" class="btn btn-success" style="width: 150px;">Thêm khách hàng</a>
    </div>
    <table class="table-bordered" style="font-size: 20px; width: 1300px;">
        <thead>
            <tr>
                <th>STT</th>
                <th>Ảnh</th>
                <th>Họ và tên</th>
                <th>Email</th>
                <th>Password</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="">
            {{#each users}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td><img src="{{image}}" style="width: 50px; height: 50px; border-radius: 50%;
                border-color: black; border-width: 10px;" /> </td>
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.password}}</td>
                <td>
                    <a href="/admin/edit/{{this._id}}" class="btn btn-success">Edit</a>
                    <a href="/admin/delete/{{this._id}}" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>