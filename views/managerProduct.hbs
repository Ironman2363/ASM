    <table class="table table-striped">
        <thead>
            <tr>
                <th>Mã sản phẩm</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Hình Ảnh</th>
                <th>Màu</th>
                <th>Loại sản phẩm</th>
                <th>Mã khách hàng</th>
                <th>Tên khách hàng</th>
                <th></th>
            </tr>
        </thead>
        <tbody >
            {{#each product}}
            <tr>
                <td>{{this.code_product}}</td>
                <td>{{this.name_product}}</td>
                <td>{{this.price}}</td>
                <td><img src="{{this.image}}" style="width: 50px; height: 50px; border-radius: 50%;
                border-color: black; border-width: 10px;" /></td>
                <td>{{this.color}}</td>
                <td>{{this.type_product}}</td>
                <td>{{this.id_KH}}</td>
                <td>{{this.name_KH}}</td>
                <td>
                    <div class="btn-group">
                    <a href="/admin/editProduct/{{this._id}}" ><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                    <a href="/admin/deleteProduct/{{this._id}}" onclick="return confirm('Bạn có muốn xoá sản phẩm này không ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                    </div>

                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>